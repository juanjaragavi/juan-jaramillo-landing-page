---
import { Icon } from "astro-icon/components";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://juanjaramillo.tech",
    description: "Juan Jaramillo | Prompt Engineer & AI Consultant",
    icon: "mdi:home",
  },
  {
    url: "https://www.linkedin.com/in/juan-jaramillo-ai/",
    description: "Juan Jaramillo on LinkedIn",
    icon: "fa-brands:linkedin",
  },
  {
    url: "https://api.whatsapp.com/send?phone=573054206139&text=%C2%A1Hola!%20Te%20estoy%20contactando%20desde%20tu%20Landing%20Page%20y%20deseo%20informaci%C3%B3n%20acerca%20de%20servicios%20de%20IA!",
    description: "Chat with Juan Jaramillo on WhatsApp",
    icon: "fa-brands:whatsapp",
  },
  {
    url: "https://github.com/juanjaragavi",
    description: "Juan Jaramillo on GitHub",
    icon: "fa-brands:github",
  },
];
---

<footer id="contact" class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
            target="_blank"
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="size-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
